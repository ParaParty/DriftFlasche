<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seqNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|left"
            android:text="TextView"
            android:textColor="#000000"
            android:textFontWeight="2" />

        <TextView
            android:id="@+id/abstract_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|left"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loc_bottle"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:contentDescription="@string/delete"
            android:gravity="right|center_vertical"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/md_theme_dark_onSecondaryContainer"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="40dp"
            app:icon="@drawable/localization_icon"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="@color/md_theme_dark_onError" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_icon"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:contentDescription="@string/delete"
            android:gravity="right|center_vertical"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/md_theme_dark_onSecondaryContainer"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="40dp"
            app:icon="@drawable/delete_icon"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="@color/md_theme_dark_onError" />
    </LinearLayout>


</LinearLayout>